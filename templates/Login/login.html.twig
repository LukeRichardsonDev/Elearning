{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class='row mt-3'>
        <h1 class='col-md-12 text-center'>Sign In</h1>
    </div>

    <form class='mt-2' action="{{ path('login') }}" method="post">
        <div class='row'>
            <label class='col-md-3 offset-md-3 text-center' for="userName">Username:</label>
            <input class='col-md-4' type="text" id="userName" name="_username" value="{{ username }}" />
        </div>

        <div class='row mt-3'>
            <label class='col-md-3 offset-md-3 text-center' for="password">Password:</label>
            <input class='col-md-4' type="password" id="password" name="_password" />
        </div>

        <div class='row justify-content-center mt-3'>
            <button class='btn btn-primary' type="submit">login</button>
        </div>
    </form>
{% endblock body %}
